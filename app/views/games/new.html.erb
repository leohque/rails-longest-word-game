<%= image_tag 'think.gif', width:150 %>
<h1 class="m-3">What is the longest word you can find?</h1>

  <div id="simpleList" class="d-flex justify-content-center flex-wrap">
    <% @letters.each do |letter| %>
      <div id="<%= letter %>" class="btn btn-info letter m-1 shadow" data-letter="<%= letter %>">
        <%= letter %>
      </div>
    <% end %>
  </div>
<div class="d-flex justify-content-center m-3">
<form action="/score" method="POST" class="form-inline shadow">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" class="form-control">
  <input type="submit" value="Play" class="form-control btn-success">
</form>
</div>
<p class="result"><strong>Score</strong>: <%= cookies[:score].nil? ? 0 : cookies[:score] %></p>
<a href="" class="btn btn-danger shadow">refresh letters</a>
